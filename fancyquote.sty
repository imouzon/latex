                      }%
\def\simplequote@iii[#1]{%
    \def\tempc{#1}%
    \vspace{0.5em}%
    \noindent%
    \begin{list}{}{%
         \setlength{\leftmargin}{0.1\textwidth}%
         \setlength{\rightmargin}{0.1\textwidth}%
                  }%
         \item[]%
         \begingroup\itshape}%

 \def\endsimplequote{%
 \endgroup\par%
